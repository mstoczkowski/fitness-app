{
    "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
    "organizeImports": {
      "enabled": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true
      }
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "single",
        "semicolons": "asNeeded",
        "trailingComma": "es5"
      }
    },
    "files": {
      "ignore": [
        "**/node_modules/**",
        "**/.next/**",
        "**/dist/**",
        "**/build/**",
        "**/.expo/**",
        "**/.turbo/**",
        "**/coverage/**"
      ]
    }
  }